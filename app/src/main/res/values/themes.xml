<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Base.Theme.LiteFood" parent="Theme.Material3.Light.NoActionBar">
        <!--Base colors-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurfaceContainer">@color/white</item>
        <item name="colorTertiaryContainer">@color/golden_yellow</item>

        <item name="colorSecondary">#BE817D</item>
        <item name="colorTertiary">#B58A31</item>
        <item name="colorError">#FF5449</item>

        <!--Style attributes-->
        <item name="buttonStyle">@style/GeneralButton</item>
        <item name="bottomNavigationStyle">@style/Widget.LiteFood.BottomNavigationView</item>
        <item name="navigationViewStyle">@style/NavigationView</item>
        <item name="toolbarStyle">@style/Theme.LiteFood.Toolbar</item>
        <item name="materialCardViewStyle">@style/MaterialCardView</item>

        <!--        Params-->
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.LiteFood" parent="Base.Theme.LiteFood" />

    <style name="ThemeOverlay.LiteFood.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="Theme.LiteFood.MainActivity" parent="Base.Theme.LiteFood">
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">#FFFFFF</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
    </style>

    <style name="SplashScreenLight" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="SplashScreenDark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_dark</item>
    </style>

    <style name="MaterialCardView" parent="Widget.Material3.CardView.Outlined">
        <item name="android:backgroundTint">@color/white</item>
    </style>

</resources>