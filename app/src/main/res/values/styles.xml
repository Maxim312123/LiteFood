<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GeneralButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_add_product_state</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:foreground">@drawable/ripple_color</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.LiteFood.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemIconTint">@color/bottom_nav_state</item>
        <item name="itemTextColor">@color/bottom_nav_state</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="menu">@menu/bottom_navigation_bar</item>
    </style>

    <style name="Theme.LiteFood.Toolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="backgroundTintMode">src_over</item>
        <item name="addElevationShadow">true</item>
        <item name="titleCentered">true</item>
        <item name="titleTextColor">@color/white</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="Theme.LiteFood.ChooseGenderDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.LiteFood.SuccessLoginDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.LiteFood.DatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="StartOrderRegistrationCardView" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="strokeColor">?attr/colorOnSurface</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="elevation">4dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="EditAddressCardView" parent="CardView">
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cardElevation">4dp</item>
        <item name="elevation">8dp</item>
    </style>


    <style name="SettingsActivityToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="background">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="titleCentered">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProductCard" parent="Widget.MaterialComponents.CardView">
        <item name="background">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="CarouselMaterialCardView" parent="Widget.Material3.CardView.Elevated">
        <item name="background">@drawable/background_hit_sales_product</item>
    </style>

</resources>