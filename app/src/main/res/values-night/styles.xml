<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GeneralButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_add_product_state</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:foreground">@drawable/ripple_color</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SettingsActivityToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="background">@color/pressed_text_view</item>
        <item name="colorAccent">@color/white</item>
        <item name="titleCentered">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProductCard" parent="Widget.MaterialComponents.CardView">
        <item name="background">@color/black</item>
        <item name="backgroundTint">@color/black</item>
        <item name="cornerRadius">20dp</item>
    </style>
</resources>